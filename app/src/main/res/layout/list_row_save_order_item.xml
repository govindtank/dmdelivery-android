<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_item_height"
        android:background="@color/colorBGMain"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seqTxt"
            android:layout_width="@dimen/linear_text_width"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical|center"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBGMain"
            android:paddingLeft="5dp">

            <ImageView
                android:id="@+id/month_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBGMain" />

            <TextView
                android:id="@+id/txtAddress2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtAddress1"
                android:layout_marginTop="2dp"
                android:paddingRight="30dp"
                android:text="0000000000"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/txtMslTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtAddress2"
                android:layout_marginTop="2dp"
                android:paddingRight="30dp"
                android:text="0000000000"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/txtDsmTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp"
                android:paddingRight="30dp"
                android:text="0000000000"
                android:textColor="@color/colorText"
                android:layout_below="@+id/txtMslTel"/>


            <ImageView
                android:id="@+id/mont_drag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/drag" />

            <TextView
                android:id="@+id/txtInv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:text="0000000000"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txtAddress1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtRepcode"
                android:layout_below="@+id/txtRepcode"
                android:layout_marginTop="2dp"
                android:paddingRight="30dp"
                android:text="0000000000"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/txtRepcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtInv"
                android:layout_marginTop="2dp"
                android:text="0000000000"
                android:textColor="@color/colorText"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>